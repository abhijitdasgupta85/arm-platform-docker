{
  "name": "ARM Cortex-A Bare-Metal QEMU Dev",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu-22.04",

  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {}
  },

  "postCreateCommand": "sudo apt update && sudo apt install -y gcc-arm-none-eabi binutils-arm-none-eabi qemu-system-arm gdb-multiarch make python3 git ca-certificates",

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.cpptools",
        "ms-vscode.cmake-tools",
        "ms-vscode.makefile-tools",
        "ms-python.python"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash"
      }
    }
  },

  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",

  "remoteUser": "vscode"
}
